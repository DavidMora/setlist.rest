#:kivy 1.0.9

<ConnectionScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "100dp"
        Widget:
        MDTextField:
            id: hostname
            hint_text: "Hostname"
        MDTextField:
            id: port
            hint_text: "Port"
        MDTextField:
            id: username
            hint_text: "Username"
        MDRelativeLayout:
            MDTextField:
                id: password
                hint_text: 'Password'
                password: True
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: password.width - self.width + dp(8), 0
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True
        MDBoxLayout:
            orientation: "horizontal"
            Widget:
            MDFlatButton:
                text: "Connect"
                on_release: self.parent.parent.parent.set_connection_data()
            Widget:
        
        Widget:

