#:kivy 1.0.9

<ConnectionScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "100dp"
        Widget:
        MDTextField:
            hint_text: "Hostname"
        MDTextField:
            hint_text: "Port"
        MDTextField:
            hint_text: "Username"
        MDRelativeLayout:
            MDTextField:
                id: text_field
                hint_text: 'Password'
                password: True
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: text_field.width - self.width + dp(8), 0
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    text_field.password = False if text_field.password is True else True
        MDBoxLayout:
            orientation: "horizontal"
            Widget:
            MDFlatButton:
                text: "Connect"
                on_release: root.manager.current = "MainScreen"
            Widget:
        
        Widget:

